<resources>

<properties>
	<property id="longpress_threshold" type="number">2000</property>
	<property id="default_goal" type="number">36</property> 
	<property id="activity_level" type="number">0</property>
	<property id="birthday" type="number">0</property>
	<property id="arc_yellow_threshold" type="number">16</property>
	<property id="arc_green_threshold" type="number">20</property>
	<property id="streak" type="number">0</property>
</properties>

<strings>
	<string id="longpress_threshold_title">Long Press Threshold</string>
	<string id="default_goal_title">Default Goal (hours)</string>
	<string id="activity_level_title">Activity Level</string>
	<string id="activity_level_0">Sedentary (little to no exercise)</string>
	<string id="activity_level_1">Lightly Active (light exercise 1-3 days per week)</string>
	<string id="activity_level_2">Moderately Active (moderate exercise 3-5 days per week)</string>
	<string id="activity_level_3">Very Active (hard exercise 6-7 days per week)</string>
	<string id="activity_level_4">Extra Active (very hard exercise/training or a physical job)</string>
	<string id="birthday_title">Birthday</string>
	<string id="arc_yellow_threshold_title">Fast Threshold Yellow (hours)</string>
	<string id="arc_green_threshold_title">Fast Threshold Green (hours)</string>
	<string id="streak_title">Current Streak</string>
</strings>

<settings>
	<setting propertyKey="@Properties.longpress_threshold" title="@Strings.longpress_threshold_title">
	<settingConfig type="numeric" min="1000" />
	</setting>
	
	<setting propertyKey="@Properties.default_goal" title="@Strings.default_goal_title">
	<settingConfig type="numeric" min="1" />
	</setting>
	
	<setting propertyKey="@Properties.activity_level" title="@Strings.activity_level_title">
	<settingConfig type="list">
	<listEntry value="0">@Strings.activity_level_0</listEntry>
	<listEntry value="1">@Strings.activity_level_1</listEntry>
	<listEntry value="2">@Strings.activity_level_2</listEntry>
	<listEntry value="3">@Strings.activity_level_3</listEntry>
	<listEntry value="4">@Strings.activity_level_4</listEntry>
	</settingConfig>
	</setting>
	
	<setting propertyKey="@Properties.birthday" title="@Strings.birthday_title">
	<settingConfig type="date" /> 
	</setting>
	
	<setting propertyKey="@Properties.arc_yellow_threshold" title="@Strings.arc_yellow_threshold_title">
	<settingConfig type="numeric" min="1" />
	</setting>
	
	<setting propertyKey="@Properties.arc_green_threshold" title="@Strings.arc_green_threshold_title">
	<settingConfig type="numeric" min="1" />
	</setting>
	
	<setting propertyKey="@Properties.streak" title="@Strings.streak_title">
	<settingConfig type="numeric" />
	</setting>
</settings>

</resources>