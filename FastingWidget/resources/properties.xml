<resources>
	<properties>
		<property id="longpress_threshold" type="number">2000</property>
		<property id="show_seconds" type="boolean">true</property>
		<property id="default_page_goal" type="number">2</property>
		<property id="default_page_no_goal" type="number">3</property>
		<property id="default_goal" type="number">16</property>
		<property id="custom_goal_1" type="number">0</property>
		<property id="custom_goal_2" type="number">0</property>
		<property id="custom_goal_3" type="number">0</property>
		<property id="activity_level" type="number">2</property>
		<property id="birthday" type="number">0</property>
		<property id="bmr_formula" type="number">0</property>
		<property id="custom_bmr" type="number">0</property>
		<property id="body_fat" type="number">23</property>
		<property id="streak_reset_threshold" type="number">50</property>
		<property id="streak_inc_threshold" type="number">75</property>
		<property id="streak_data" type="number">0</property>
		<property id="overwrite_date_format" type="string"></property>
		<property id="time_format" type="number">0</property>
		<property id="show_days" type="number">24</property>
	</properties>

	<settings>
		<setting propertyKey="@Properties.longpress_threshold" title="@Strings.longpress_threshold_title">
		<settingConfig type="numeric" min="1000" />
		</setting>
		
		<setting propertyKey="@Properties.show_seconds" title="@Strings.show_seconds_title">
		<settingConfig type="boolean" />
		</setting>
		
		<setting propertyKey="@Properties.default_page_goal" title="@Strings.default_page_goal_title">
		<settingConfig type="list">
		<listEntry value="0">@Strings.page_streak</listEntry>
		<listEntry value="1">@Strings.page_elapsed</listEntry>
		<listEntry value="2">@Strings.page_remaining</listEntry>
		<listEntry value="4">@Strings.page_calories</listEntry>
		</settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.default_page_no_goal" title="@Strings.default_page_no_goal_title">
		<settingConfig type="list">
		<listEntry value="0">@Strings.page_streak</listEntry>
		<listEntry value="3">@Strings.page_elapsed</listEntry>
		<listEntry value="4">@Strings.page_calories</listEntry>
		</settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.default_goal" title="@Strings.default_goal_title">
		<settingConfig type="numeric" min="1" />
		</setting>
		
		<setting propertyKey="@Properties.custom_goal_1" title="@Strings.custom_goal_title_1">
		<settingConfig type="numeric"></settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.custom_goal_2" title="@Strings.custom_goal_title_2">
		<settingConfig type="numeric"></settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.custom_goal_3" title="@Strings.custom_goal_title_3">
		<settingConfig type="numeric"></settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.activity_level" title="@Strings.activity_level_title">
		<settingConfig type="list">
		<listEntry value="0">@Strings.activity_level_0</listEntry>
		<listEntry value="1">@Strings.activity_level_1</listEntry>
		<listEntry value="2">@Strings.activity_level_2</listEntry>
		<listEntry value="3">@Strings.activity_level_3</listEntry>
		<listEntry value="4">@Strings.activity_level_4</listEntry>
		</settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.birthday" title="@Strings.birthday_title">
		<settingConfig type="date" /> 
		</setting>
		
		<setting propertyKey="@Properties.bmr_formula" title="@Strings.bmr_formula_title">
		<settingConfig type="list">
		<listEntry value="0">@Strings.bmr_mifflin</listEntry>
		<listEntry value="1">@Strings.bmr_harris</listEntry>
		<listEntry value="2">@Strings.bmr_katch</listEntry>
		</settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.custom_bmr" title="@Strings.custom_bmr_title">
		<settingConfig type="numeric" min="0"></settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.body_fat" title="@Strings.body_fat_title">
		<settingConfig type="numeric" min="1" max="100" />
		</setting>
		
		<setting propertyKey="@Properties.streak_reset_threshold" title="@Strings.streak_reset_threshold_title">
		<settingConfig type="numeric" min="1" max="100" />
		</setting>
		
		<setting propertyKey="@Properties.streak_inc_threshold" title="@Strings.streak_inc_threshold_title">
		<settingConfig type="numeric" min="1" max="100" />
		</setting>
		
		<setting propertyKey="@Properties.streak_data" title="@Strings.streak_title">
		<settingConfig type="numeric" />
		</setting>
		
		<setting propertyKey="@Properties.overwrite_date_format" title="@Strings.overwrite_date_format_title">
		<settingConfig type="alphaNumeric" maxLength="8" /> 
		</setting>
		
		<setting propertyKey="@Properties.time_format" title="@Strings.time_format_title">
		<settingConfig type="list">
		<listEntry value="0">@Strings.time_format_1</listEntry>
		<listEntry value="1">@Strings.time_format_2</listEntry>
		</settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.show_days" title="@Strings.show_days_title">
		<settingConfig type="numeric" min="24" />
		</setting>
	</settings>
</resources>